<view class='header'>
    <text class='balance'>账户余额(元)</text>
    <text class='balance-number'>9999.9</text>
</view>
<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">
    明细
    </view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">提现
    </view>  
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
    <swiper-item>
    <view class='information'>
        <view class='information-1'>
            <view class='information-icon'><image src='/images/icon/icon4.png'/></view>
            <view class='information-1-1'><text>商户信息</text></view>
            <view class='information-1-2'>
                <text style='float:left;'>美吉拉</text>
                <text style='float:right;'>></text>
            </view>
        </view>
        <view class='information-2'>
            <view class='information-icon'><image src='/images/icon/icon14.png'/></view>
            <view class='information-1-1'><text>员工管理</text></view>
            <view class='information-1-2'>
                <text style='float:right;'>></text>
            </view>
        </view>
    </view>
     
     
        
    </swiper-item>  
    <swiper-item> 
    <text>提现</text> 
      
      
    </swiper-item>   
</swiper> 


.header{
    height: 200rpx;
    background: -webkit-linear-gradient(#1AA591,rgb(120, 238, 220)); 
    background: linear-gradient(#1AA591,rgb(120, 238, 220)); 
    color: #ffffff;
    padding:0 30rpx;
}
.balance{
    font-size: 26rpx;
    display: block;
    height: 80rpx;
    line-height: 100rpx; 
}
.balance-number{
    font-size: 80rpx;
}
.swiper-tab{  
  width: 100%;
  height:100rpx;
  text-align: center;  
  line-height: 80rpx;
  background-color: #189887;
}  
.swiper-tab-list{  
  font-size: 26rpx;  
  display: inline-block;  
  width: 50%;  
  color:#ffffff;
   
}  
.on{
  color:#e0e0e0 ;  
}
.swiper-tab-1{  
  width: 0rpx;
  height: 0rpx;
  margin:0rpx auto;
}
.in{
  width: 40rpx;  
  border-bottom: 6rpx solid #1AA591;
}
.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}  
.swiper-box view{  
  text-align: center;  
}
.information{
    height: 200rpx;
    padding: 0 30rpx;
    background-color: #ffffff;
}
.information-1{
    border-bottom: 1rpx solid #f5f5f5;
}
.information-1,
.information-2{
    height: 95.5rpx;
    display: flex;
    font-size: 26rpx;
    line-height: 100rpx;
}
.information-icon{
    height: 200rpx;
    width: 10%;
}
.information-icon image{
    width: 30rpx;
    height: 30rpx;
    margin-top: 35rpx;
}
.information-1-1{
    width: 70%;
}
.information-1-1 text{
    float: left;
}
.information-1-2{
    width: 20%;
}


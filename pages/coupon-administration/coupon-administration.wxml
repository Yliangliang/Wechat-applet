<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">进行中
    <view class="swiper-tab-1 {{currentTab==0 ? 'in' : ''}}"></view>
    </view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">已结束
    <view class="swiper-tab-1 {{currentTab==1 ? 'in' : ''}}"></view>
    </view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已停用
    <view class="swiper-tab-1 {{currentTab==2 ? 'in' : ''}}"></view>
    </view>    
</view>  
